<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <ul>
      <li><a class="active" href="/v1">Home</a></li>
      <li><a href="/v1/create">Create Users</a></li>
    </ul>
    <div class="table-container container">
      <p class="title h3">List Users</p>
      <table class="table table-striped align-middle">
        <thead>
          <tr class="table-primary">
            <th scope="col">ID</th>
            <th scope="col">EMAIL</th>
            <th scope="col">NAME</th>
            <th scope="col">CITY</th>
            <th scope="col">ACTION</th>
          </tr>
        </thead>
        <tbody>
          <!-- <% for (let i=0 ;i < listUsers.length; i++ ) { %>
          <tr>
            <th scope="row"><%= listUsers[i].id %></th>
            <td><%= listUsers[i].email%></td>
            <td><%= listUsers[i].name %></td>
            <td><%= listUsers[i].city %></td>
            <td class="text-center">
              <button class="btn btn-primary">edit</button>
              <button class="btn btn-primary">delete</button>
            </td>
          </tr>
          <% } %> -->

          <% listUsers.forEach(function(user,index) { %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.email%></td>
            <td><%= user.name %></td>
            <td><%= user.city %></td>
            <td class="text-center">
              <a href="/v1/update/<%= user.id %>" class="btn btn-primary"
                >edit</a
              >
              <form
                action="/v1/delete-user/<%= user.id %>"
                method="get"
                style="display: inline"
              >
                <button type="submit" class="btn btn-primary">delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
